{
  "name": "@drasi/signalr-vue",
  "version": "0.1.0-alpha",
  "description": "Vue components for Drasi SignalR",
  "author": "The Drasi Authors",
  "license": "Apache-2.0",
  "homepage": "https://drasi.io",  
  "repository": {
    "type": "git",
    "url": "https://github.com/drasi-project/drasi-platform"
  },
  "publishConfig": {
    "access": "public"    
  },
  
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "main": ".dist/vue3-component-library.umd.js",
  "module": ".dist/vue3-component-library.es.js",
  
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/vue3-component-library.umd.js",
      "import": "./dist/vue3-component-library.es.js"
    }
  },
  "scripts": {
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "test:unit": "vitest run --coverage",
    "build": "rimraf dist && vue-tsc && vite build"
  },
  "peerDependencies": {
    "vue": "^3.5.13",
    "@microsoft/signalr": "^8.0.7",
    "murmurhash": "^2.0.1"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.6.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "typescript": "5.8.3",
    "vite": "^5.4.11",
    "vitest": "^0.34.6",
    "vue": "^3.5.13",
    "vue-tsc": "2.2.10"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}
