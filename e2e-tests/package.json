{
  "name": "tests",
  "version": "1.0.0",
  "description": "Folder will contain end-to-end tests",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --detectOpenHandles",
    "test:ci": "jest --reporters=default --reporters=jest-junit --detectOpenHandles"
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "outputDirectory": "../pipeline",
    "outputName": "e2e.xml"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2021": true,
      "jest": true,
      "node": true,
      "jest/globals": true
    },
    "plugins": [
      "jest"
    ]
  },
  "dependencies": {
    "@microsoft/signalr": "^7.0.2",
    "axios": "^1.11.0",
    "gremlin": "^3.7.3",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "knex": "^2.4.2",
    "path": "^0.12.7",
    "pg": "^8.9.0",
    "portfinder": "^1.0.32",
    "tough-cookie": "^4.1.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/jest": "^29.4.0",
    "eslint": "^8.33.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.7.0",
    "redis": "^4.7.1"
  }
}
